	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/owl.carousel.min.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/owl.theme.default.min.css') }}">
	<link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

	<title>POLEIT Site d'astronomie</title>
</head>
<!-- TOP NAV -->
<div class="top-nav" id="home">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-auto">
				<p> <i class='bx bxs-envelope'></i> poleitorleans@gmail.com</p>
				<p> <i class='bx bxs-phone-call'></i> (+33) 07 512 417 13 </p>
			</div>
			<div class="col-auto social-icons">
				<a href="#"><i class='bx bxl-facebook'></i></a>
				<a href="#"><i class='bx bxl-twitter'></i></a>
				<a href="#"><i class='bx bxl-instagram'></i></a>
				<a href="#"><i class='bx bxl-pinterest'></i></a>
			</div>
		</div>
	</div>
</div>

<!-- BOTTOM NAV -->
<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
	<div class="container">
		<a class="navbar-brand" href="{{ path('main') }}">POLE<span class="dot">.</span>IT</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('main') }}">Accueil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#portfolio">Activités</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#blog">Blog</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#about">A propos</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('products_index') }}">Boutique</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#team">Team</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#exampleModal" data-bs-toggle="modal" data-bs-target="#exampleModal">Contact</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('cart_index') }}">Panier</a>
				</li>
			</ul>
			<a href="{{ path('app_login') }}"  class="btn btn-brand ms-lg-3">S'incrire/Se Connecter</a>
		</div>
	</div>
</nav>
<div class="card-body">
	{% for message in app.session.flashBag.get('info') %}
		<div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
			<span class="font-medium">Info alert!</span>  {{ message }}
		</div>
	{% endfor %}
	{% for message in app.session.flashBag.get('success') %}
		<div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
			<span class="font-medium">Success alert!</span> {{ message }}
		</div>
	{% endfor %}
	{% for message in app.session.flashBag.get('error') %}
		<div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
			<span class="font-medium">Danger alert!</span>{{ message }}
		</div>
	{% endfor %}
</div>
{% block body %}


{% endblock %}
<footer>
	<div class="footer-top text-center">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<h4 class="navbar-brand">POLEIT<span class="dot">.</span></h4>
					<p>L'innovation en astronomie avec des expériences immersives et des technologies avancées.</p>
					<div class="col-auto social-icons">
