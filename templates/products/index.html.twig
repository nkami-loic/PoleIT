{% extends "base.html.twig" %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row justify-content-center">
                {% for product in products %}
                    <div class="col-md-8 col-lg-6 col-xl-4 mb-4">
                        <div class="card" style="border-radius: 15px;">
                            <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                                 data-mdb-ripple-color="light">
                                <img src="{{ asset('uploads/produits/' ~ product.imagePath) }}"
                                     style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid"
                                     alt="{{ product.name }}" />
                                    <div class="mask"></div>
                                </a>
                            </div>
                            <div class="card-body pb-0">
                                <div class="d-flex justify-content-between">
                                    <div>

                                        <p class="small text-muted">{{ product.categories.name }}</p>
                                        <p class="small text-muted">{{ product.price }} €</p>
                                    </div>
                                    <div>
                                        <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <p class="small text-muted">{{ product.price }} €</p>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-0" />
                            <div class="card-body pb-0">
                                <div class="d-flex justify-content-between">
                                    <p class="text-dark">{{ product.stock }} en stock</p>
                                </div>
                                <p class="text-dark">{{ product.description }} en stock</p>
                            </div>
                            <hr class="my-0" />
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center pb-2 mb-1">

                                    <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
